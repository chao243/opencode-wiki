{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "lib": [
            "ESNext"
        ],
        "types": [
            "bun-types"
        ]
    },
    "include": [
        "src/**/*",
        "script/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}